# PKGBUILD (Yerel Dosya Kullanımı)
# ===============================

pkgname=treepp
pkgver=1.0.0      
pkgrel=1          
pkgdesc="A file system tree utility written in C++ (Python's Pytree equivalent)."
arch=('x86_64')
url="https://github.com/yunuste/Treepp" 
license=('GPL') 
depends=('gcc-libs') 

# Programın kaynak dosyaları (Yerel dizinde olmalı)
source=("tree++.cpp") 
sha256sums=('SKIP') # Kaynak dosyanın yerel dizinde olduğunu gösterir

# Derleme aşaması (build)
build() {
  # tree++.cpp dosyası srcdir'de bulunur
  g++ -std=c++17 tree++.cpp -o tree++
}

# Kurulum aşaması (package)
package() {
  # Çalıştırılabilir dosyayı /usr/bin dizinine kopyala
  # Makepkg, bu dosyayı srcdir'de bulur.
  install -Dm755 tree++ "${pkgdir}/usr/bin/tree++"
}